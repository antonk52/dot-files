# vim: set ft=config:

# `no-title` expands alias commands in window title
shell-integration-features = cursor,no-sudo,no-title

# alacritty has a faster scroll
mouse-scroll-multiplier = 1.2

# darken from #fff so it is easier on the eyes
foreground = #f5f7ff

# disable ligatures
font-feature = -calt
font-family = Fira Code

# do not blink
cursor-style-blink = false

# bump font size
font-size = 13

window-padding-balance = true
window-padding-x = 0
window-padding-y = 0

quit-after-last-window-closed = true

auto-update-channel = stable
